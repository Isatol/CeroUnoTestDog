@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron">
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <h1>Mascotas</h1>
      </div>
    </div>
    <p>Mis mascotas</p>
    <br />
    <div class="row">
      <p><a class="btn btn-primary btn-lg" href="" role="button">AÃ±adir mascota</a></p>
    </div>
  </div>
</div>

@foreach (var dog in Model.Dogs){
  <form method="post">
<div class="col-md-6">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title pull-left">
        @dog.Name
      </h3>
      <div class="btn-group pull-right">
        <a asp-page="" class="btn btn-xs btn-info"><span class="glyphicon glyphicon-edit"></span>&nbsp;</a>
        <button type="submit" asp-page-handler="delete" asp-route-id="" class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="panel-body">
      Breed: <p>@dog.Breed</p>
    </div>
  </div>
</div>
</form>

}
